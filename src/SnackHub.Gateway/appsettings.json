{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "client-route": {
        "ClusterId": "client-cluster",
        "Match": {
          "Path": "client-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/client/v1/{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "client-cluster",
        "Match": {
          "Path": "auth-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/authentication/v1/{**catch-all}"
          }
        ]
      },
      "production-route": {
        "ClusterId": "production-cluster",
        "Match": {
          "Path": "production-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/ProductionOrder/v1/{**catch-all}"
          }
        ]
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "order-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/order/v1/{**catch-all}"
          }
        ]
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "product-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/product/v1/{**catch-all}"
          }
        ]
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "payment-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/payment/v1/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "order-cluster": {
        "Destinations": {
          "docker-compose": {
            "Address": "http://snack-hub-order-app:5688"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "docker-compose": {
            "Address": "http://snack-hub-product-app"
          }
        }
      },
      "production-cluster": {
        "Destinations": {
          "docker-compose": {
            "Address": "http://snack-hub-production-app"
          }
        }
      },
      "client-cluster": {
        "Destinations": {
          "docker-compose": {
            "Address": "http://snack-hub-client-app:8080"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "docker-compose": {
            "Address": "http://127.0.0.1:5588"
          }
        }
      }
    }
  }
}
